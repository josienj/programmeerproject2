<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/vertrektijd"
        android:id="@+id/vertrektijd"
        android:layout_gravity="right"
        android:layout_below="@+id/ritnummer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/station"
        android:id="@+id/eindbestemming"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ritnummer"
        android:layout_toEndOf="@+id/ritnummer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ritnummer"
        android:id="@+id/ritnummer"
        android:visibility="gone"/>
</RelativeLayout>